<tr>
  <td>
    <%= link_to author_path(author) do %>
      <%= full_name(author.family_name, author.first_name) %>
    <% end %>
  </td>
  <td><%= author.books.length %></td>
  <td><%= author.fetch_a_book_by_price(:max).title %></td>
  <td><%= author.fetch_a_book_by_price(:max).price %></td>
</tr>
